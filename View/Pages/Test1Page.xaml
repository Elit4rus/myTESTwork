<Page x:Class="TESTwork.View.Pages.Test1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TESTwork.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="Test1Page">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="619*"/>
            <ColumnDefinition Width="581*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="products" Grid.ColumnSpan="2" >
            <TabItem x:Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Пути ормирования отраслей промышленности:" FontSize="30"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="1 выделение отраслей промышленности из других отраслей национального хозяйства" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="2 углубление спечиализии в самой промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="3 развитие концентрации в промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="4 расширение комбинирования в промышленности;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="5 научно-технический прогресс;" FontSize="20"/>
                        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p1" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p1_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">2</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text=" Принцип, лежащий в основе деления промышленной продукции на группы А и Б:" FontSize="25"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" FontSize="20" Content="нaзначение производимой продуии;"/>
                        <RadioButton x:Name="RB2" Margin="10" HorizontalAlignment="Left" Content="pakтическое использование продукчии;" FontSize="20"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" Content="обшность основного сырья;" FontSize="20"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" Content="cложность технологическиx прочессов. " FontSize="20"/>
                        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p2" Content="Пpинять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p2_Click" />
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Oтраслевая структура промьшленности xарактеризуется:" FontSize="30"/>
                        <CheckBox x:Name="Chb1" Margin="10" HorizontalAlignment="Left" Content="долей продукии отрасли в обшм выпуске промпродукии" FontSize="20"/>
                        <CheckBox x:Name="Chb2" Margin="10" HorizontalAlignment="Left" Content="долей основныX ондов отрасли в обшем обьеме основных фондов промышленности" FontSize="20"/>
                        <CheckBox x:Name="Chb3" Margin="10" HorizontalAlignment="Left" Content="долей оборотныx ондов в обшем обьеме оборотных фондов промышленности" FontSize="20"/>
                        <CheckBox x:Name="Chb4" Margin="10" HorizontalAlignment="Left" Content="долей работников, занятых в отрасли, в общей численности работников промышленности" FontSize="20"/>
                        <CheckBox x:Name="Chb5" Margin="10" HorizontalAlignment="Left" Content="долей прибыли отрасли в обшей прибыли промышленности;" FontSize="20"/>
                        <TextBox x:Name="TextBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p3_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="К основным направлениям научно-технического прогресса в промышленности относятся:" FontSize="30"/>
                        <CheckBox x:Name="ChB6" Margin="10" HorizontalAlignment="Left" Content="электрификация промышленности;" FontSize="20"/>
                        <CheckBox x:Name="ChB7" Margin="10" HorizontalAlignment="Left" Content="углубление специализации в самой промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB8" Margin="10" HorizontalAlignment="Left" Content="развитие концентрации в промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB9" Margin="10" HorizontalAlignment="Left" Content="расширение комбинирования в промышленности" FontSize="20"/>
                        <CheckBox x:Name="ChB10" Margin="10" HorizontalAlignment="Left" Content="научно-технический прогресс;" FontSize="20"/>
                        <TextBox x:Name="TextBox4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p4" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p4_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v5">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">5</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Какой тип производства является наиболее эффективным с точки зрения минимизации издержек производства?" FontSize="30"/>
                        <CheckBox x:Name="ChB11" Margin="10" HorizontalAlignment="Left" Content="индивидуальное производство" FontSize="20"/>
                        <CheckBox x:Name="ChB12" Margin="10" HorizontalAlignment="Left" Content="мелкосерийное производство" FontSize="20"/>
                        <CheckBox x:Name="Ch13" Margin="10" HorizontalAlignment="Left" Content="массовое производство" FontSize="20"/>
                        <CheckBox x:Name="ChB14" Margin="10" HorizontalAlignment="Left" Content="непрерывное производство;" FontSize="20"/>
                        <TextBox x:Name="TextBox5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p5" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p5_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v6">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">6</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Серийному производству свойственны:" FontSize="30"/>
                        <CheckBox x:Name="ChB15" Margin="10" HorizontalAlignment="Left" Content="широкое использование универсального оборудования" FontSize="20"/>
                        <CheckBox x:Name="ChB16" Margin="10" HorizontalAlignment="Left" Content="организация рабочих мест по технологической специализации" FontSize="20"/>
                        <CheckBox x:Name="Ch17" Margin="10" HorizontalAlignment="Left" Content="типизация технологических процессов и оснастки" FontSize="20"/>
                        <CheckBox x:Name="ChB18" Margin="10" HorizontalAlignment="Left" Content="1-3;" FontSize="20"/>
                        <CheckBox x:Name="ChB19" Margin="10" HorizontalAlignment="Left" Content="1,3;" FontSize="20"/>
                        <TextBox x:Name="TextBox6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p6" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p6_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v7">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">7</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Единичному производству свойственны:" FontSize="30"/>
                        <CheckBox x:Name="ChB20" Margin="10" HorizontalAlignment="Left" Content="преимущественная численность рабочих высокой квалификации" FontSize="20"/>
                        <CheckBox x:Name="ChB21" Margin="10" HorizontalAlignment="Left" Content="использование универсального оборудования" FontSize="20"/>
                        <CheckBox x:Name="ChB22" Margin="10" HorizontalAlignment="Left" Content="непрерывная дистанционная диспетчеризация производства" FontSize="20"/>
                        <CheckBox x:Name="ChB23" Margin="10" HorizontalAlignment="Left" Content="1-3;" FontSize="20"/>
                        <CheckBox x:Name="ChB24" Margin="10" HorizontalAlignment="Left" Content="1,2;" FontSize="20"/>
                        <TextBox x:Name="TextBox7" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p7" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p7_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v8">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">8</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Верно ли утверждение, что увеличение концентрации производства способствует:" FontSize="30"/>
                        <CheckBox x:Name="ChB25" Margin="10" HorizontalAlignment="Left" Content="оптимальному сочетание крупных, средних и мелких предпрятий" FontSize="20"/>
                        <CheckBox x:Name="ChB26" Margin="10" HorizontalAlignment="Left" Content="развитию монополизма" FontSize="20"/>
                        <CheckBox x:Name="ChB27" Margin="10" HorizontalAlignment="Left" Content="непрерывная дистанционная диспетчеризация производства" FontSize="20"/>
                        <CheckBox x:Name="ChB28" Margin="10" HorizontalAlignment="Left" Content="снижению дефицита продукции;" FontSize="20"/>
                        <CheckBox x:Name="ChB29" Margin="10" HorizontalAlignment="Left" Content="улучшению использования производственных фондов;" FontSize="20"/>
                        <CheckBox x:Name="ChB30" Margin="10" HorizontalAlignment="Left" Content="1-3;" FontSize="20"/>
                        <TextBox x:Name="TextBox8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p8" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p8_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v9">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">9</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15,0,108,0">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Государственное урегулирование рынка. Правовые основы, регулирующие предпринимательской деятельности в РФ устанавливаются:" FontSize="30"/>
                        <CheckBox x:Name="ChB31" Margin="10" HorizontalAlignment="Left" Content="Указами Президента РФ" FontSize="20"/>
                        <CheckBox x:Name="ChB32" Margin="10" HorizontalAlignment="Left" Content="Постановлениями Правительства РФ" FontSize="20"/>
                        <CheckBox x:Name="ChB33" Margin="10" HorizontalAlignment="Left" Content="Гражданским кодексом РФ и Федеральными законами" FontSize="20"/>
                        <CheckBox x:Name="ChB34" Margin="10" HorizontalAlignment="Left" Content="1-3;" FontSize="20"/>
                        <CheckBox x:Name="ChB35" Margin="10" HorizontalAlignment="Left" Content="1-2;" FontSize="20"/>
                        <TextBox x:Name="TextBox9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p9" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p9_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v10">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">10</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15,0,108,0">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Государственное урегулирование рынка. Правовые основы, регулирующие предпринимательской деятельности в РФ устанавливаются:" FontSize="30"/>
                        <CheckBox x:Name="ChB41" Margin="10" HorizontalAlignment="Left" Content="Указами Президента РФ" FontSize="20"/>
                        <CheckBox x:Name="ChB42" Margin="10" HorizontalAlignment="Left" Content="Постановлениями Правительства РФ" FontSize="20"/>
                        <CheckBox x:Name="ChB43" Margin="10" HorizontalAlignment="Left" Content="Гражданским кодексом РФ и Федеральными законами" FontSize="20"/>
                        <CheckBox x:Name="ChB44" Margin="10" HorizontalAlignment="Left" Content="1-3;" FontSize="20"/>
                        <CheckBox x:Name="ChB45" Margin="10" HorizontalAlignment="Left" Content="1-2;" FontSize="20"/>
                        <TextBox x:Name="TextBox10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" />
                        <Button x:Name="p10" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p10_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
